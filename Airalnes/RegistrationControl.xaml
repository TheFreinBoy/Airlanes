<UserControl x:Class="Airalnes.RegistrationControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:Airalnes"
        mc:Ignorable="d"
        Height="450" Width="800">
    <UserControl.Resources>
        <ControlTemplate x:Key="NoEffectButtonTemplate" TargetType="Button">
            <Border Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            CornerRadius="4"
            Padding="{TemplateBinding Padding}">
                <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>
    </UserControl.Resources>

    <Grid >
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.1,0" EndPoint="0.9,1">
                <GradientStop Color="#a300f5" Offset="1"/>
                <GradientStop Color="#ea1cfc" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Border Height="390" VerticalAlignment="Top" CornerRadius="0 0 180 0" Background="#100E17" >

        </Border>
        <StackPanel Orientation="Horizontal">
            <StackPanel Width="350">
                <Image Source="Images/Plane.png" Width="300" Height="300" Margin="30" VerticalAlignment="Top" Stretch="Fill"/>
            </StackPanel>
            <StackPanel Width="350">
                <StackPanel Margin="20 40">
                    <TextBlock Text="Registration" Margin="20" Foreground="White" TextAlignment="Center" FontSize="38" FontFamily="Times New Roman"/>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon  Kind="Email" Width="25" Height="25" Foreground="White" />
                        <TextBox Margin="10 0" materialDesign:HintAssist.Hint="Email" Width="250" Background="#100E17" Foreground="White" BorderBrush="White"
                                 x:Name="EmailTextBox"/>

                    </StackPanel>
                    <TextBlock x:Name="EmailError" Foreground="Red" Margin="45 0 0 0" Visibility="Collapsed" Text=" The email you have provided is already busy."/>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon  Kind="User" Width="25" Height="25" Foreground="White" />
                        <TextBox Margin="10 0" materialDesign:HintAssist.Hint="Usarname" Width="250" Background="#100E17" Foreground="White" BorderBrush="White"
                                 x:Name="UsernameTextBox"/>

                    </StackPanel>
                    <TextBlock x:Name="UsernameError" Foreground="Red" Margin="45 0 0 0" Visibility="Collapsed" Text="The username you have provided is already busy."/>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon  Kind="Password" Width="25" Height="25" Foreground="White" />
                        <PasswordBox Margin="10 0" materialDesign:HintAssist.Hint="Enter password" Width="250" Background="#100E17" Foreground="White" BorderBrush="White"
                                     x:Name="PasswordBox"/>

                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="10">
                        <materialDesign:PackIcon Kind="Airplane" Width="25" Height="25" Foreground="White" VerticalAlignment="Center" />

                        <ComboBox Width="250" Margin="10 0"
                             Background="#100E17" Foreground="White"
                             BorderBrush="White"
                             x:Name="RoleComboBox"     
                             materialDesign:HintAssist.Hint="Choose your role">
                            <ComboBoxItem Content="User" Background="#100E17" />
                            <ComboBoxItem Content="Worker" Background="#100E17" />
                        </ComboBox>
                        
                    </StackPanel>
                    <StackPanel Margin="-4" Visibility="Collapsed" x:Name="GlobalError" Height="15" >
                        <TextBlock  Text="Fields cannot be blank" 
                                   Foreground="Red" TextAlignment="Center" Margin="0 0 0 10" />
                    </StackPanel>
                    <StackPanel Margin="-4" Visibility="Collapsed" x:Name="RegistrationError" Height="15" >
                        <TextBlock  Text="Registration error" 
                                    Foreground="Red" TextAlignment="Center" Margin="0 0 0 10" />
                    </StackPanel>
                    <StackPanel Margin="10" HorizontalAlignment="Center" Width="300" Orientation="Horizontal">
                        
                        <Button Width="110" Height="40" Style="{StaticResource MaterialDesignRaisedButton}" materialDesign:ButtonAssist.CornerRadius="15" BorderThickness="2"
                                BorderBrush="#a300f5" Background="#a300f5" Foreground="white" ToolTip="Registration" Content="Registration" Margin="90 0 0 0" 
                                Click="RegisterButton_Click">
                        </Button>
                        <StackPanel Width="100">
                            <Button Margin="0 0 0 0"  Height="40" Width="100" Content="Login" Foreground="white" FontSize="11"
                                Background="{x:Null}" BorderBrush="{x:Null}"  Template="{StaticResource NoEffectButtonTemplate}" Click="BackToLogin_Click" >

                            </Button>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel Width="100">
                <Button  Margin="50 15 10 0" Height="30" Width="30" Style="{StaticResource MaterialDesignFloatingActionButton}" ToolTip="Close" Background="{x:Null}" 
                     x:Name="ButtonExit" Click="ButtonExit_Click" >
                    <materialDesign:PackIcon Kind="Close" Foreground="White" Height="20" Width="20"/>
                </Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
